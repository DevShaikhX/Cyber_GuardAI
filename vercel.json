{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/dist/assets/$1"
        },
        {
            "source": "/vite.svg",
            "destination": "/dist/vite.svg"
        },
        {
            "source": "/robots.txt",
            "destination": "/dist/robots.txt"
        },
        {
            "source": "/(.*)",
            "destination": "/dist/index.html"
        }
    ],
    "functions": {
        "api/index.py": {
            "includeFiles": "backend/**"
        }
    }
}